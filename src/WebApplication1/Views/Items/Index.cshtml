@model List<ModelProductionCase.Models.Item>
@{
    ViewData["Title"] = "Index";
}

<h3></h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Status</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="delete" asp-route-id="@item.Id">delete</a>
                </td>
                </tr>
        }
        </tbody>
</table>